@using HabitTrack_UI.Components.Auth
@using Microsoft.AspNetCore.Authorization;


<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">

                <Authorizing>
                    <p>Authorizing...</p>
                </Authorizing>

                <NotAuthorized>
                    @if (routeData.PageType.GetCustomAttributes(typeof(AllowAnonymousAttribute), true).Any())
                    {
                        <RouteView RouteData="@routeData" DefaultLayout="@typeof(AuthLayout)" />
                    }
                    else
                    {
                        <LayoutView Layout="@typeof(AuthLayout)">
                            <p>You are not authorized.</p>
                        </LayoutView>
                    }
                </NotAuthorized>

            </AuthorizeRouteView>
        </Found>

        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
