@using HabitTracker.Application.DTOs

<div class="row g-3">
    <div class="col-12 col-md-6">
        <TodayProgress Completed="Summary.CompletedHabitsToday"
                       Total="Summary.TotalHabitsToday" />
    </div>

    <div class="col-6 col-md-3">
        <StatCard Title="Current Streak"
                  Value="@($"{Summary.CurrentStreak} days")"
                  Subtitle="At least one habit per day" />
    </div>

    <div class="col-6 col-md-3">
        <StatCard Title="First habit completed"
                  Value="@(Summary.FirstCompletionAt?.ToString("HH:mm") ?? "-")"
                  Subtitle="Today" />
    </div>
</div>
<div class="d-flex justify-content-end mt-2">
    <NavLink href="/stats"
             class="small fw-semibold text-primary text-decoration-none">
        View detailed analytics →
    </NavLink>
</div>

@code {
    [Parameter] public TodaySummaryDTO Summary { get; set; } = default!;
}
