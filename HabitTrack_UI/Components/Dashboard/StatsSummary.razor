<div class="container">
    <div>
        @if (Total == 0)
        {
            <p>Add your first habit to see your progress!</p>
        }
    </div>
    <div>
        <TodayProgress Completed="Completed"
                       Total="Total" />

        <StatCard Title="Weekly Average"
                  Value="@($"{WeeklyAverage}%")"
                  Subtitle="Last 7 days" />

        <StatCard Title="Longest Streak"
                  Value="@($"{LongestStreak}")"
                  Subtitle="days" />

        <StatCard Title="Total Completions"
                  Value="@($"{TotalCompletions}")"
                  Subtitle="All time" />
    </div>
</div>

@code {
    [Parameter] public int Completed { get; set; }
    [Parameter] public int Total { get; set; }

    private int WeeklyAverage = 0;
    private int LongestStreak = 0;
    private int TotalCompletions = 0;
}
