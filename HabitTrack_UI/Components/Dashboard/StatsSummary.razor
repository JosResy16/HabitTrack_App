@using HabitTracker.Application.DTOs
<div class="container">
    <div>
        @if (Total == 0)
        {
            <p>Add your first habit to see your progress!</p>
        }
    </div>
    <div>
        <TodayProgress Completed="Completed"
                       Total="Total" />
        
        <StatCard Title="Current Streak"
                  Value="@($"{Completed}%")"
                  Subtitle="Last 7 days" />

        <StatCard Title="Longest Streak"
                  Value="@($"{StatsSummaryDTO?.LongestStreak}")"
                  Subtitle="days" />

        <StatCard Title="Total Completions"
                  Value="@($"{StatsSummaryDTO?.TotalCompletions}")"
                  Subtitle="All time" />
    </div>
</div>

@code {
    [Parameter] public int Completed { get; set; }
    [Parameter] public int Total { get; set; }
    [Parameter] public HabitStatsSummaryDTO? StatsSummaryDTO { get; set; }

}
